{
  "extends": ["react-app", "react-app/jest"],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["build/", "dist/", "node_modules/", "*.min.js", "*.d.ts"]
}
